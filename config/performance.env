# Performance Optimization Configuration
# Copy these settings to your .env file for better performance

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=school_management
CACHE_TTL=300

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=school_vehicle_management
DB_USERNAME=root
DB_PASSWORD=

# Database Performance Settings
DB_MAX_CONNECTIONS=100
DB_CONNECTION_TIMEOUT=30
DB_ENABLE_QUERY_LOGGING=false
DB_SLOW_QUERY_THRESHOLD=100

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_REDIS_CONNECTION=default

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_SLOW_REQUEST_THRESHOLD=2000
PERFORMANCE_MEMORY_LIMIT_THRESHOLD=128
PERFORMANCE_ENABLE_QUERY_PROFILING=false

# Asset Optimization
ASSETS_ENABLE_MINIFICATION=true
ASSETS_ENABLE_COMPRESSION=true
ASSETS_ENABLE_CDN=false
ASSETS_CDN_URL=

# Pagination Settings
PAGINATION_DEFAULT_PER_PAGE=10
PAGINATION_MAX_PER_PAGE=100

# Cache TTL Settings (in seconds)
CACHE_DASHBOARD_STATS_TTL=300
CACHE_RECENT_TRIPS_TTL=180
CACHE_ACTIVE_TRIPS_TTL=60
CACHE_STUDENT_LISTS_TTL=300
CACHE_VEHICLE_LISTS_TTL=300
CACHE_DRIVER_LISTS_TTL=300
CACHE_ROUTE_LISTS_TTL=300
CACHE_TRIP_LISTS_TTL=180
CACHE_GUARDIAN_LISTS_TTL=300
CACHE_SCHOOL_LISTS_TTL=600
CACHE_CHART_DATA_TTL=300
CACHE_TRENDS_TTL=300

# Application Performance
APP_DEBUG=false
APP_ENV=production
LOG_LEVEL=error

# Mail Configuration (for better performance)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=null
MAIL_FROM_NAME="${APP_NAME}"

# File System Performance
FILESYSTEM_DISK=local
FILESYSTEM_CLOUD=s3

# Broadcasting (disable for better performance)
BROADCAST_DRIVER=log
